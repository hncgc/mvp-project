<?xml version="1.0" encoding="utf-8"?>
<com.pccb.newapp.view.pulltorefreshview.AbPullToRefreshView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptr_pull"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pccb.newapp.mvp.product.ProductItemFragment">

    <TextView
        android:id="@+id/tv_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Fragmet Product"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_product_list"
        android:name="com.pccb.newapp.mvp.product.ProductItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_item" />


</com.pccb.newapp.view.pulltorefreshview.AbPullToRefreshView>
