<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_tabbar_height"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/foot_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_main_tabbar"
        android:src="@mipmap/main_toolbar_home_normal" />

    <TextView
        android:id="@+id/foot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_main_tabbar"
        android:text="首页"
        android:textColor="@color/tab_light_color" />

</LinearLayout>

