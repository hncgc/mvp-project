<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient 
                android:startColor="#fff1f1f1" 
                android:centerColor="#fff1f1f1" 
                android:endColor="#fff1f1f1" 
                android:angle="270.0" 
                android:centerY="0.0"  />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient 
                    android:startColor="#f7b701"
                    android:centerColor="#f7b701"
                    android:endColor="#f7b701"
                    android:angle="270.0" 
                    android:centerY="0.0"  />
            </shape>
        </clip>
    </item>
</layer-list>
